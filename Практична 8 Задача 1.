
#include <iostream>
using namespace std;


int main()
{

    int arr[7] = {11, 22, 33, 44, 55, 66, 77};
    int max = arr[0], day_max = 1;
    for(int i=1; i<7 ;i++){
        if(arr[1]> max){
            max=arr[i];
            day_max = i + 1;
        }
    }
    int mintemp = arr[0], day_mix = 1;
    for (int i = 0;i<7;i++){
        if(arr[i]<mintemp){
            mintemp=arr[i];
            day_max=i+1;
        }
    }
    int suma = 0;
    for(int i=0;i<7;i++){
        suma+= arr[i];
    }
    float sredna = static_cast<float>(suma)/7;
    int j = 0;
    for(int i = 0;i<7;i++){
        if(arr [i]> sredna){
            j++;
        }
    }
    cout<<"The highest temperature"" " <<day_max<<" ""day"" "<<max<<" ""gradus"<<endl;
    cout<<"Lowest temperature"" "<<day_mix<<" ""day"" "<<mintemp<<" ""gradus"<<endl;
    cout<<"Average temperature"" "<<sredna<<" """ "gradus"<<'\n';
    cout<<"More than average"" "<<j<<endl;
}
